<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="9dp"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="0.01dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/locationLayout"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lblDateDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wed 12:00"
                android:textAlignment="center"
                style="@style/TextStylePrimaryColored"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgWeather"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="center"
                    android:src="@drawable/w02d"/>
                <TextView
                    android:id="@+id/lblTemperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:textColor="@color/darkGray"
                    android:textSize="35sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="o"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/lblTemperatureUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C"
                    android:textColor="@color/darkGray"
                    android:textSize="30sp" />

            </LinearLayout>
            <TextView
                android:id="@+id/lblDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="scattered clouds"
                android:textSize="14sp"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/lblInformation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="W: 2.92 m/s, h: 56%"
                android:textAlignment="center"/>
        </LinearLayout>
            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryOpacity5"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="@dimen/mapButtonMargin"
                android:layout_marginBottom="@dimen/mapButtonMargin"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>